@rendermode InteractiveServer

<RadzenHeader>
    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
        <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
        <RadzenLabel Text="ShireBudgeters" />
    </RadzenStack>
</RadzenHeader>
<RadzenSidebar @bind-Expanded="@sidebarExpanded" style="margin-top: 50px;">
    <RadzenPanelMenu>
        <RadzenPanelMenuItem Text="Dashboard" Path="admin/dashboard" />
        <RadzenPanelMenuItem Text="Categories" Path="admin/categories" />
        <RadzenPanelMenuItem Text="Posts" Path="admin/posts" />
        <RadzenPanelMenuItem Text="LeadMagnets" Path="admin/lead-magnets" />
    </RadzenPanelMenu>
</RadzenSidebar>

@code {
    bool sidebarExpanded = true;
}